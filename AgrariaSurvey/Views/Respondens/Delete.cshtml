@model AgrariaSurvey.Models.Responden

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Responden</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentitasResponden.NomorResponden)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentitasResponden.NomorResponden)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentitasResponden.NamaResponden)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentitasResponden.NamaResponden)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentitasResponden.JenisKelaminResponden)
        </dt>
        @if (Model.IdentitasResponden?.JenisKelaminResponden == "1")
        {
            <dd class="col-sm-10">
                Perempuan
            </dd>
        }
        else if (Model.IdentitasResponden?.JenisKelaminResponden == "2")
        {

            <dd class="col-sm-10">
                Laki-laki
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                -
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentitasResponden.NoHpResponden)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentitasResponden.NoHpResponden)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RespondenID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
